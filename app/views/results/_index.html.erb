<!-- must include because toggle is not available in current bootstrap gem -->
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.0/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.0/js/bootstrap-toggle.min.js"></script>

<div class="three-column-container" ng-controller="HotelController">

    <div class="col-md-2 col" ng-show="show_filter">

        <div class='wrapper text-center'>
            <div class="btn-group btn-group-xs" data-toggle="buttons">
                <button type="button" class="btn btn-default time-dur-btn active" ng-click="show_flight_results=true">
                    <input type="radio" name="options" id="option1"> <span class="glyphicon glyphicon-time"></span>
                </button>
                <button type="button" class="btn btn-default time-dur-btn" ng-click="show_flight_results=false">
                    <input type="radio" name="options" id="option3"> <span class="glyphicon glyphicon-usd"></span>
                </button>
            </div>
        </div>

        <div class="filter-list">

            <div class="filter-option row">
                <div class="filter-option-label">
                    Departure
                </div>
                <div class="filter-option-switch">
                    <input type="checkbox" data-toggle="toggle" data-on="PM" data-off="AM" data-onstyle="primary" data-size="mini" data-width="80" data-height="10">
                </div>
            </div>

            <div class="filter-option row">
                <div class="filter-option-label">
                    Arrival
                </div>
                <div class="filter-option-switch">
                    <input type="checkbox" data-toggle="toggle" data-on="AM" data-off="PM" data-onstyle="primary" data-size="mini" data-width="80" data-height="10">
                </div>
            </div>

            <div class="filter-option row">
                <div class="filter-option-label">
                    AirBnb
                </div>
                <div class="filter-option-switch">
                    <input type="checkbox" data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="primary" data-size="mini" data-width="80" data-height="10">
                </div>
            </div>

            <div class="filter-option row">
                <div class="filter-option-label">
                    Direct
                </div>
                <div class="filter-option-switch">
                    <input type="checkbox" data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="primary" data-size="mini" data-width="80" data-height="10">
                </div>
            </div>

        </div>
    </div>

    <div class="itinerary" ng-controller="TripController"  ng-show="show_filter">

        <div class="col-md-5 col trip-content" ng-hide="show_flight_results">
            <button class="btn btn-default"  ng-click="next()">Next</button>
            <div ng-repeat="trip in trips | orderBy:'price'">
                <div ng-if="trip_index == $index">
                    <div class="trip-template">
                        <div class="flight-template" ng-repeat="flight in trip.flights">
                            <div class="flight-long">{{flight.carrier_full}}</div>
                            <div class="header-map">
                                <span class="flight-carrier">{{flight.carrier_abbv}} {{flight.flight_num}}</span>
                                <span class="flight-date">{{flight.dep_time|date:fullDate}}</span>
                            </div>
                            <br>
                            <div class="flight-map">
                                <span class="flight-origin">{{flight.airport_ori_code}}</span>
                                <span class="flight-dest">{{flight.airport_dest_code}}</span>
                            </div>
                            <br>
                            <div class="schedule-map">
                                <span class="flight-dep">{{flight.dep_time | date: 'shortTime'}}</span>
                                <span class="flight-arr">{{flight.arr_time | date: 'shortTime'}}</span>
                            </div>
                            <br>
                        </div>
                    <span>{{trip.price | currency}}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5 col trip-content" ng-show="show_flight_results">
            <button class="btn btn-default"  ng-click="next()">Next</button>
            <div ng-repeat="trip in trips | orderBy:'duration'">
                <div ng-if="trip_index == $index">
                    <div class="trip-template">
                        <div class="flight-template" ng-repeat="flight in trip.flights">
                            <div class="flight-long">{{flight.carrier_full}}</div>
                            <div class="header-map">
                                <span class="flight-carrier">{{flight.carrier_abbv}} {{flight.flight_num}}</span>
                                <span class="flight-date">{{flight.dep_time|date:fullDate}}</span>
                            </div>
                            <br>
                            <div class="flight-map">
                                <span class="flight-origin">{{flight.airport_ori_code}}</span>
                                <span class="flight-dest">{{flight.airport_dest_code}}</span>
                            </div>
                            <br>
                            <div class="schedule-map">
                                <span class="flight-dep">{{flight.dep_time | date: 'shortTime'}}</span>
                                <span class="flight-arr">{{flight.arr_time | date: 'shortTime'}}</span>
                            </div>
                            <br>
                        </div>
                    <span>{{trip.price | currency}}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5 col hotel-content">
            <button class="btn btn-default" ng-click="next_hotel()">Next</button>
            <div ng-repeat="hotel in hotels | orderBy:'price'">
                <div ng-if="hotel_index == $index">
                    <a href="{{hotel.url}}">{{hotel.name}}: {{hotel.price}}</a>
                </div>
            </div>
        </div>

    </div>

</div>
