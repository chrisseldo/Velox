<div id="signup-modal">

  <h1>Signup</h1>

  <%= form_for(@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit "Create Account" %>
  <% end %>

  <% if session[:message] %>
    <%= session[:message] %>
    <% session.delete(:message) %>
  <% end %>

</div>
