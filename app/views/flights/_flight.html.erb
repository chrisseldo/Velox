<div id="trip-<%= flight.trip_id %>-details" class="panel-collapse collapse" role="tabpanel" aria-labeledby="trip-<%= flight.trip_id %>-heading">
  <ul class="list-group">
    <li class="list-group-item itinerary-details">
      <div class="row flight-row">
        <div class="col-md-3">
          <%= flight.airport_ori_code %>
        </div>
        <div class="col-md-6">
          <i class="fa fa-long-arrow-right flight-arrow"></i>
          <p class="itinerary-details">
            <%= "#{flight.carrier_full}" %>
          </p>
          <p class="itinerary-details">
            <%= "##{flight.flight_num}" %>
          </p>
        </div>
        <div class="col-md-3">
          <span><%= flight.airport_dest_code %></span>
        </div>
      </div>
    </li>
  </ul>
</div>

















