<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Travel, simplified.</h1>
    <div ng-controller="SearchController">
      <form name="searchForm" ng-submit="submit()">
        <div class="row" id="location-inputs">
          <div class="col-md-6">
            <input type="text" class="search-bar" placeholder="Departure" name="depart_location" id="depart-autocomplete" ng-model="search.depart_location.name">
          </div>
          <div class="col-md-6">
            <input type="text" class="search-bar" placeholder="Destination" name="destination_location" id="destination-autocomplete">
          </div>
        </div>
        <div class="row" id="date-inputs">
          <div class="col-md-6">
            <label>Departure Date:</br>
              <input type="text" name="depart_date" id="depart-date" ng-model="search.depart_date">
            </label>
          </div>
          <div class="col-md-6">
            <label>Return Date:</br>
              <input type="text" name="return_date" id="return-date" ng-model="search.return_date">
            </label>
          </div>
        </div>
        <input type="submit" class="btn btn-default search-submit-btn">
      </form>
    </div>
  </div>
</div>

<div>
  <%= render "results/index" %>
</div>
